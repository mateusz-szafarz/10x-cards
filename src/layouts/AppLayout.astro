---
import '../styles/global.css';
import Navbar from '../components/layout/Navbar';
import { Toaster } from '../components/ui/sonner';

interface Props {
  title?: string;
  user: {
    id: string;
    email: string;
  };
  currentPath: string;
}

const { title = '10x Cards', user, currentPath } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background flex min-h-screen flex-col">
    <header>
      <Navbar client:load user={user} currentPath={currentPath} />
    </header>
    <main class="flex-1">
      <div class="container mx-auto max-w-7xl px-4 py-8">
        <slot />
      </div>
    </main>
    <Toaster client:load />
  </body>
</html>
