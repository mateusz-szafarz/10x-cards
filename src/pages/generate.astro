---
import AppLayout from "../layouts/AppLayout.astro";

// User is guaranteed to exist by middleware for protected pages
const user = Astro.locals.user!;
---

<AppLayout title="Generate Flashcards - 10x Cards" user={user} currentPath="/generate">
  <div class="space-y-4">
    <h1 class="text-3xl font-bold">Generate Flashcards</h1>
    <p class="text-muted-foreground">
      This page is under construction. Future iterations will allow you to paste text
      and generate AI-powered flashcard suggestions.
    </p>
  </div>
</AppLayout>
